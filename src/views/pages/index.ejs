<!doctype html>
<html lang="en">
    <%- include("../components/head.ejs", { title: "Mini Messaging Board" }) %>
    <body>
        <%- include("../components/header.ejs") %>
        <main>
            <section class="messages">
                <h1>Messages</h1>
                <% messages.forEach((message, index) => { %>
                <div class="message-container">
                    <section class="content">
                        <h2 class="name"><%= message.name %></h2>
                        <p class="message"><%= message.text %></p>
                    </section>
                    <div class="open">
                        <a href="/<%= index %>">Open</a>
                    </div>
                </div>
                <% }); %>
            </section>
        </main>
        <%- include("../components/footer.ejs", { year: date.getFullYear() }) %>
    </body>
</html>
