<!doctype html>
<html lang="en">
    <%- include("../components/head.ejs", { title: "Mini Message Board - New message" }) %>
    <body>
        <%- include("../components/header.ejs") %>
        <main>
            <section class="message-detail-container">
                <div>
                    <h1 class="name"><%= message.name %></h1>
                    <p class="details">Posted on: <%= message.date %>. From: <%= message.location %>.</p>
                </div>
                <p><%= message.text %></p>
            </section>
        </main>
        <%- include("../components/footer.ejs", { year: date.getFullYear() }) %>
    </body>
</html>
